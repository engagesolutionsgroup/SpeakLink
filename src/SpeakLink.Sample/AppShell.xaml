<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="SpeakLink.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SpeakLink.Sample"
    Shell.FlyoutBehavior="Disabled"
    Title="SpeakLink.Sample"
    TabBarForegroundColor="White"
    TabBarTitleColor="White"
    TabBarBackgroundColor="MediumPurple">

    <TabBar>
        <Tab Title="Mentions">
            <ShellContent
                Title="Mentions"
                Icon="dotnet_bot.png"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Rich Text">
            <ShellContent
                Title="Rich Text"
                Icon="dotnet_bot.png"
                ContentTemplate="{DataTemplate local:RichEditorMainPage}"
                Route="Editor" />
        </Tab>
    </TabBar>
</Shell>